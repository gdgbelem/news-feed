<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/feed_item_thumb_image"
        android:contentDescription="@string/thumb_image_content_description"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/feed_item_title"
        android:textSize="25sp"
        android:layout_toLeftOf="@id/feed_item_thumb_image"
        android:layout_toStartOf="@id/feed_item_thumb_image"
        android:layout_width="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/feed_item_updated"
        android:layout_toLeftOf="@id/feed_item_thumb_image"
        android:layout_toStartOf="@id/feed_item_thumb_image"
        android:layout_below="@id/feed_item_title"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>